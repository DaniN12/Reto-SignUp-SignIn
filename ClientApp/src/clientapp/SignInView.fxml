<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1">
     <children>
        <!-- Etiqueta para el campo de nombre de usuario -->
        <Label layoutX="50" layoutY="50" text="Username" />
        
        <!-- Campo de texto para ingresar el nombre de usuario -->
        <TextField fx:id="usernameField" layoutX="150" layoutY="50" promptText="Enter your username" />

        <!-- Etiqueta para el campo de contraseña -->
        <Label layoutX="50" layoutY="100" text="Password" />
        
        <!-- Campo de texto para ingresar la contraseña (oculto) -->
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="100" promptText="Enter your password" />

        <!-- Etiqueta para mostrar mensajes de error o éxito -->
        <Label fx:id="errorLabel" layoutX="150" layoutY="200" textFill="red" />
    </children>
</AnchorPane>
